<!--LOGIN PAGE-->

<% provide(:title, 'Log in') %>
<div class="mdl-layout mdl-js-layout">
<div class="center pagecontent">
<h1>Welcome back!</h1>
  <div>
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      	<%= f.label :email, class: 'mdl-textfield__label'%>
      	<%= f.email_field :email, class: 'mdl-textfield__input' %>
      </div><br>
      
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      	<%= f.label :password, class: 'mdl-textfield__label'%>
      	<%= f.password_field :password, class: 'mdl-textfield__input' %>
      </div><br>

      <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent", style: "margin-top: 20px;" %>

     <% end %><br><br>

      <%= link_to "Or Sign Up Now!", signup_path, class: "mdl-button mdl-js-button mdl-button--primary" %>

    
  </div>

</div>
