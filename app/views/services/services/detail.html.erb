<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--6-col">
    <h3><%= @service.name %></h1>
  </div>
  <div class="mdl-cell mdl-cell--6-col">
    <h3>(<%= number_to_currency @service.price, locale: :fi %>)</h6>
  </div>
  <div class="mdl-cell mdl-cell--12-col">
    <%= link_to 'Buy', services_add_to_cart_path(@service.id), class: 'mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
  </div>
  <div class="mdl-cell mdl-cell--12-col">
    <h4><%= @service.supplier.name %></h4>
  </div>
  <div class="mdl-cell mdl-cell--12-col">
    <div><%= markdown(@service.description) %></div>
  </div>
</div>

<hr>

<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h6>Customers who bought this also bought</h6>
  </div>
  <div class="intro-block mdl-cell mdl-cell--12-col">
    <div class="mdl-grid">
      <% @related_services.each do |service| %>
      <div class="demo-card-square mdl-card mdl-shadow--2dp mdl-cell mdl-cell--3-col">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text"><%= service.name %> (<%= number_to_currency service.price, locale: :fi %>)</h2>
        </div>
        <div class="mdl-card__supporting-text"><%= service.supplier.name %></div>
        <div class="mdl-card__actions mdl-card--border">
          <%= link_to 'View Offer', services_detail_path(service.id), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="mdl-cell mdl-cell--12-col">
    <div class="mdl-cell mdl-cell--12-col">
      <h4>Reviews</h4>
    </div>
    <div class="mdl-cell mdl-cell--12-col">
      <ul class="demo-list-item mdl-list">
      <% @service.reviews.each do |review| %>
      <li class="mdl-list__item">
        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--2-col">
            <div class="mdl-cell mdl-cell--12-col">
              <i class="material-icons mdl-list__item-avatar">person</i>
            </div>
            <div class="mdl-cell mdl-cell--12-col"><%= review.user.name %></div>
          </div>
          <div class="mdl-cell mdl-cell--10-col">
            <div class="mdl-cell mdl-cell--12-col"><%= review.date.strftime("%d/%m/%Y") %></div>
            <div class="mdl-cell mdl-cell--12-col">Rating: <%= review.rating %> / 5</div>
            <div class="mdl-cell mdl-cell--12-col"><%= review.comment %></div>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
    </div>
  </div>
</div>
