<div class="intro-block">
  <div class="mdl-grid">
    <% @services.each do |service| %>
    <div class="demo-card-square mdl-card mdl-shadow--2dp mdl-cell mdl-cell--3-col">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text"><%= service.name %> (<%= number_to_currency service.price, locale: :fi %>)</h2>
      </div>
      <div class="mdl-card__supporting-text"><%= service.supplier.name %></div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to 'View Offer', services_detail_path(service.id), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
